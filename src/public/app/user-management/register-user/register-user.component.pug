.container([hidden]="isLoggedIn")
  //- Should probably get rid of this
  h1
    | Register Here:
  form.registration-form#cos-register-user-form([formGroup]="form", (ngSubmit)="onSubmit(form.value)")
    .form-group
      label(for="username")
        | Username
      input#username.form-control([formControl]="form.controls['username']",
                                  type="uername",
                                  name="username")
      .alert.alert-danger(*ngIf="form.controls['username'].hasError('required') && formSubmitted")
          | You need to pick a username.
      .alert.alert-danger(*ngIf="form.controls['username'].hasError('maxlength') && formSubmitted")
          | That's too long. Keep it under 10 characers.
      .alert.alert-danger(*ngIf="form.controls['username'].hasError('pattern') && formSubmitted")
          | We're only allowing alphanumeric usernames for now.
    .form-group
      label(for="email")
        | Email
      input#email.form-control([formControl]="form.controls['email']",
                               type="text",
                               name="email")
      .alert.alert-danger(*ngIf="form.controls['email'].hasError('required') && formSubmitted")
          | We need an email.
      .alert.alert-danger(*ngIf="form.controls['email'].hasError('email') && formSubmitted")
          | That's not a valid email.
    .form-group
      label(for="password")
        | Password
      input#password.form-control([formControl]="form.controls['password']",
                                  type="password",
                                  name="password")
      .alert.alert-danger(*ngIf="form.controls['password'].hasError('required') && formSubmitted")
          | You need a password.
      .alert.alert-danger(*ngIf="form.controls['password'].hasError('maxlength') && formSubmitted")
          | That password's too long. Keep it under 20 characters.
      .alert.alert-danger(*ngIf="form.controls['password'].hasError('minlength') && formSubmitted")
          | That password's too short. Make it at least 8 characters long.
      .alert.alert-danger(*ngIf="form.controls['password'].hasError('pattern') && formSubmitted")
          | We're only allowing alphanumeric passwords for now... trust me that will change.
    .form-group
      label(for="confirm-password")
        | Re-Enter Password
      input#password.form-control([formControl]="form.controls['passwordVerify']",
                                  type="password",
                                  name="passwordVerify",
                                  required)
      .alert.alert-danger(*ngIf="form.controls['passwordVerify'].hasError('required') && formSubmitted")
          | You need to enter that password again.
      .alert.alert-danger(*ngIf="!passwordsMatch && formSubmitted")
          | Those passwords don't match.
    .form-group
      .g-recaptcha(data-sitekey="6LdhiCkTAAAAAKm0VwPm_vw-ZdzMEfUmmmmVyXZR",
                   data-callback="verifyCallback",
                   data-expired-callback="captchaExpiredCallback")
    button.btn.btn-default([disabled]="!captchaResponse")
      | Submit
