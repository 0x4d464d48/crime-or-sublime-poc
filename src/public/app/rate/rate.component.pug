#cos-rate(*ngIf="isLoggedIn")
  #cos-rate-graffiti-image-random-and-favourite-button
    #cos-rate-graffiti-image-div
      img#cos-rate-graffiti-image([src]="'http://i.imgur.com/' + displayedGraffiti + 'l.jpg'")
    #cos-rate-favourite-and-random-buttons
      button.btn#cos-rate-favourite-button
        | Add to favourites
      button.btn#cos-rate-random-button((click)="getRandomGraffiti()")
        | Random
  #cos-rate-rating-buttons
    button.btn.btn-danger#cos-rate-crime-button((click)="rateGraffiti(false)")
      | Crime
    button.btn.btn-primary#cos-rate-sublime-button((click)="rateGraffiti(true)")
      | Sublime